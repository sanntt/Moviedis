<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moviedis.MovieDetailActivity.MovieDetailFragment">

    <TextView
        android:id="@+id/movie_detail_title"
        style="@style/MovieDetailTitle" />

    <LinearLayout
        android:id="@+id/movie_detail_inner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/movie_detail_title">

        <ImageView
            android:id="@+id/movie_detail_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_detail_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#727272" />

            <TextView
                android:id="@+id/movie_detail_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/movie_detail_plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_detail_inner_container"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
